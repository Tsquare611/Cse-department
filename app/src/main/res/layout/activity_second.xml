<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background_gradient"
    tools:context=".SecondActivity">
    <Button
        android:id="@+id/welcomebuttonId"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_txt"
        style="@style/Widget.AppCompat.Button.Colored"

        />
    <Button
        android:id="@+id/facultybuttonId"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/staff_txt"
        style="@style/Widget.AppCompat.Button.Colored"

        />
    <Button
        android:id="@+id/aboutbuttonId"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_txt"
        style="@style/Widget.AppCompat.Button.Colored"

        />
    <Button
        android:id="@+id/contactbuttonId"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contact_txt"
        style="@style/Widget.AppCompat.Button.Colored"

        />
</LinearLayout>